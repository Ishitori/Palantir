@model Ix.Palantir.Services.API.Security.AccountInfo

@{
    ViewBag.Title = "Создать аккаунт";
}

<h2>Редактировать аккаунт</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("DoEdit", "Accounts", new { accountId = Request["accountId"] }, FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Account</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaxProjectsCount)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxProjectsCount)
            @Html.ValidationMessageFor(model => model.MaxProjectsCount)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.CanDeleteProjects)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CanDeleteProjects)
        </div>
        
        <p>
            <input type="submit" value="Save" />
        </p>
        
    </fieldset>
}

<div>
    @Html.ActionLink("Обратно на список", "List")
</div>
