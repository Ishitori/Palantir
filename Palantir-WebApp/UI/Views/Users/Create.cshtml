@model Ix.Palantir.Services.API.Security.UserInfo

@{
    ViewBag.Title = "Создать пользователя";
}

<div class="beforeHeaderContainer">
  <a class="backLink" href="@Url.Action("List", "Users")">К списку пользователей</a>
</div>

@if(!ViewData.ModelState.IsValid) {
    <div id="message" class="info" title="">
        <p>@Html.ValidationMessage("UserExist")</p>
        <p>@Html.ValidationSummary(true)</p>
    </div>
}

<h2>Новый пользователь</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Users", FormMethod.Post)) {
    

    <div class="formItem">
        <div class="editor-label">
            @Html.LabelFor(model => model.FirstName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.FirstName)
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
    </div>
    
    <div class="formItem">
        <div class="editor-label">
            @Html.LabelFor(model => model.LastName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LastName)
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
    </div>
    
    <div class="formItem">
        <div class="editor-label">
            @Html.LabelFor(model => model.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>
    
    <div class="formItem">
        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>
    </div>
    
    <p>
        <input type="submit" value="Создать" />
    </p>
}